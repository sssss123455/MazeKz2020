@using WebMaze.Models.Morgue
@model ForensicReportViewModel
@section Styles {
    <link rel="stylesheet" href="~/css/Morgue.css?t=@DateTime.Now.Ticks" />
}
<div>
    <h2 class="font-weight-light">Отчет по вскрытию</h2>
</div>
<form action="@Url.Action("WriteReport", "Morgue")" method="post">
    @Html.HiddenFor(x => x.CorpseId)
    @Html.HiddenFor(x => x.DateOfForensic)
    <div class="form-group">
        @Html.DisplayNameFor(x => x.Pathologist)
        <div>
            Имя: @Model.Pathologist.FirstName
        </div>
        <div>
            Фамилия: @Model.Pathologist.LastName
        </div>
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(x => x.CauseOfDeath):
        @Html.TextBoxFor(x => x.CauseOfDeath, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.CauseOfDeath)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(x => x.Comment):
        @Html.TextBoxFor(x => x.Comment, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.Comment)
    </div>
    <div>
        @Html.DisplayNameFor(x => x.DateOfForensic): @Model.DateOfForensic
    </div>
    <div>
        <input class="btn btn-outline-secondary" type="submit" value="Сохронить" />
    </div>
</form>